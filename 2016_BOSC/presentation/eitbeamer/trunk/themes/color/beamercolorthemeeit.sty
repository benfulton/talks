\definecolor{eitbronze}{RGB}{153,102,51}
\definecolor{eitdarkgray}{RGB}{142,132,98}
\definecolor{eitred}{RGB}{131,22,28}
\definecolor{eitgreen}{RGB}{83,87,33}

%% ------------------------------------------------------
%% Inner theme colors
%% ------------------------------------------------------
\usecolortheme{orchid}

\mode
<all>

\setbeamercolor*{title}{fg=eitbronze,bg=white}
\setbeamercolor{author in head/foot}{fg=gray,bg=white}

\setbeamercolor*{frametitle}{bg=white,fg=eitbronze}
\setbeamercolor*{framesubtitle}{bg=white,fg=eitbronze}
\setbeamercolor*{frametitleline}{fg=black,bg=white}

\setbeamercolor*{item}{bg=white, fg=eitbronze}

\setbeamercolor*{alerted text}{fg=eitred}

\setbeamercolor*{block title}{fg=white,bg=eitbronze}
\setbeamercolor*{block title example}{fg=white,bg=eitgreen}
\setbeamercolor*{block title alerted}{fg=white,bg=eitred}

\setbeamercolor*{section in toc}{fg=black}
\setbeamercolor*{subsection in toc}{fg=black}
\setbeamercolor*{subsubsection in toc}{fg=black}